root: true

parserOptions:
  ecmaVersion: 2018
  sourceType: "module"

env:
  es2017: true
  browser: true

extends: "htmlacademy/vanilla"

globals:
  Pristine: readonly
  noUiSlider: readonly
  L: readonly

rules:
  no-magic-numbers:
    - error
    -
      ignore:
        - -1
        - 0
        - 1
        - 2
        - 10
        - 100
        - 200
        - 1000
        - 1001
        - 1002
  indent:
    - error
    - tab
